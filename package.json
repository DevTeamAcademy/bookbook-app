{
  "name": "bookbook-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "history": "^4.7.2",
    "immer": "^2.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-error-boundary": "^1.2.3",
    "react-hooks-global-state": "^0.6.0",
    "react-pose": "^4.0.4",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "styled-components": "^4.1.3",
    "styled-system": "^3.1.11"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-actions": "4.1.4",
    "@storybook/addon-info": "^4.1.4",
    "@storybook/addon-knobs": "^4.1.4",
    "@storybook/addon-links": "^4.1.4",
    "@storybook/addon-storyshots": "^4.1.4",
    "@storybook/addons": "4.1.4",
    "@storybook/react": "4.1.4",
    "babel-loader": "^8.0.4",
    "eslint-plugin-compat": "^2.6.3",
    "husky": "^1.3.1",
    "jest-dom": "^3.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0",
    "react-testing-library": "^5.4.4",
    "require-context.macro": "^1.0.4",
    "source-map-explorer": "^1.6.0",
    "storybook-addon-jsx": "^6.0.0",
    "storybook-chromatic": "^1.2.3"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "compat"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --print-width 120 --single-quote --jsx-single-quote --trailing-comma all",
      "git add"
    ]
  },
  "browserslist": {
    "development": [
      "last 2 versions"
    ],
    "production": [
      "last 4 versions"
    ]
  }
}
